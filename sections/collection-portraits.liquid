                {%- if section.settings.portrait_img_2.width >= 2000 -%}{{ section.settings.portrait_img_2 | img_url: 'master' }} 2000w,{%- endif -%}
                {%- if section.settings.portrait_img_2.width >= 2040 -%}{{ section.settings.portrait_img_2 | img_url: '2040x' }} 2040w,{%- endif -%}"
                src="{{ section.settings.portrait_img_2 | img_url: 'master' }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.image.alt | escape }}" 
                loading="lazy" 
                width="{{ section.settings.image.width }}"
                class="collection5__img"
              >
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}  
          </div>
          <div class="collection5__card-info">
            <h3 class="collection5__card-title">
              {{ section.settings.portrait_text_2 }}
            </h3>
          </div>
        </a>
      </div>
      <div class="col-md-4">
        <a href="{{ section.settings.portrait_img_url_3 }}" class="collection5__link-wrap mx-auto">
          <div class="collection5__wrapper collection5__padded-container">
            {%- if section.settings.portrait_img_3 != blank -%}
              <img
                srcset="{%- if section.settings.portrait_img_3.width >= 165 -%}{{ section.settings.portrait_img_3 | img_url: '165x' }} 165w,{%- endif -%}
