{% assign opacity_1 = section.settings.opacity_1 | divided_by: 100.00 %}
{% style %}
.collection5__link-wrap:before{
  background-color: {{ section.settings.bg_1 | color_modify: 'alpha', opacity_1 }};
}
{% endstyle %}

<section class="collection collection5" style="background-color: {{ section.settings.section_bg_color }};">
  <div class="container">
    <span class="collection5__sub-top">
      {{ section.settings.top_heading }}
    </span>
    <h2 class="collection5__heading mb-5 text-center">
      {{ section.settings.heading }}
    </h2>
    <div class="row g-3">
      <div class="col-md-4">
        <a href="{{ section.settings.portrait_img_url_1 }}" class="collection5__link-wrap mx-auto">
          <div class="collection5__wrapper collection5__padded-container">
            {%- if section.settings.portrait_img_1 != blank -%}
              <img
                srcset="{%- if section.settings.portrait_img_1.width >= 165 -%}{{ section.settings.portrait_img_1 | img_url: '165x' }} 165w,{%- endif -%}
                {%- if section.settings.portrait_img_1.width >= 360 -%}{{ section.settings.portrait_img_1 | img_url: 'master' }} 360w,{%- endif -%}
                {%- if section.settings.portrait_img_1.width >= 535 -%}{{ section.settings.portrait_img_1 | img_url: 'master' }} 535w,{%- endif -%}
                {%- if section.settings.portrait_img_1.width >= 750 -%}{{ section.settings.portrait_img_1 | img_url: 'master' }} 750w,{%- endif -%}
                {%- if section.settings.portrait_img_1.width >= 2000 -%}{{ section.settings.portrait_img_1 | img_url: 'master' }} 2000w,{%- endif -%}
                {%- if section.settings.portrait_img_1.width >= 2040 -%}{{ section.settings.portrait_img_1 | img_url: '2040x' }} 2040w,{%- endif -%}"
                src="{{ section.settings.portrait_img_1 | img_url: 'master' }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.image.alt | escape }}" 
                loading="lazy" 
                width="{{ section.settings.image.width }}"
                class="collection5__img"
              >
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}  
          </div>
          <div class="collection5__card-info">
            <h3 class="collection5__card-title">
              {{ section.settings.portrait_text_1 }}
            </h3>
          </div>
        </a>
      </div>
      
      <div class="col-md-4">
        <a href="{{ section.settings.portrait_img_url_2 }}" class="collection5__link-wrap mx-auto">
          <div class="collection5__wrapper collection5__padded-container">
            {%- if section.settings.portrait_img_2 != blank -%}
